#include<stdio.h>
#include<string.h>
#include<stdlib.h>
#include<unistd.h>
#include<sys/socket.h>
#include<sys/types.h>
#include<sys/stat.h>
#include<netinet/in.h>
#include<arpa/inet.h>
#include<fcntl.h>
#include<signal.h>
#include<pthread.h>

// 函数返回错误，进程结束
void error_func(const char* func)
{
	perror(func);
	exit(ERROR);
}

// 清空输入缓冲区
void stdin_clear(void)
{
	stdin->_IO_read_ptr = stdin->_IO_read_end;
}
